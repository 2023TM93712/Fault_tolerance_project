# Fault-Tolerant Full-Stack Application - Environment Variables Template
# Copy this file to .env and update the values as needed

# ===================
# Service Ports
# ===================
CPP_SERVICE_PORT=8080
FUNCTION_SIM_PORT=7071
FRONTEND_PORT=3000
REDIS_PORT=6379

# ===================
# Redis Configuration
# ===================
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# ===================
# Service URLs (for inter-service communication)
# ===================
CPP_SERVICE_URL=http://cpp_service:8080
FUNCTION_SERVICE_URL=http://function_sim:7071

# ===================
# Retry Configuration
# ===================
MAX_RETRIES=3
BASE_DELAY_MS=100
MAX_DELAY_MS=5000

# ===================
# Frontend Configuration
# ===================
REACT_APP_FUNCTION_URL=http://localhost:7071

# ===================
# Node.js Environment
# ===================
NODE_ENV=development

# ===================
# Azure Configuration (for deployment)
# ===================
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
# AZURE_SUBSCRIPTION_ID=your-subscription-id
# AZURE_RESOURCE_GROUP=fault-tolerant-rg
# AZURE_CONTAINER_REGISTRY=your-acr.azurecr.io

# ===================
# Monitoring & Observability
# ===================
# APPLICATIONINSIGHTS_CONNECTION_STRING=your-connection-string
LOG_LEVEL=info

# ===================
# Development Settings
# ===================
COMPOSE_PROJECT_NAME=fault-tolerant-fullstack
DOCKER_BUILDKIT=1